                <div class="mb-3">
                  <label for="facebook" class="form-label text-muted">Facebook</label>
                  <input type="text" name="deal[contactFB]" class="form-control" id="facebook" placeholder="www.facebook.com/" />
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div id="validationServerUsernameFeedback" class="invalid-feedback">
                    required
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="row mt-4">
          <div class="btn-group gap-1 mb-5 text-muted" role="group" aria-label="Basic example">
            <button class="btn btn-dark mt-4">Save</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>